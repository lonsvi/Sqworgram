<Page x:Class="_1ДЛЯ_ТЕСТА_ДИЗАЙНА_ПРОСТО.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d"
      Title="LoginPage" Width="1000" Height="600">

    <Page.Resources>
        <!-- ИЗМЕНЕНИЕ: Возвращена серая палитра с градиентами -->
        <LinearGradientBrush x:Key="PageBackground" StartPoint="0.5,0" EndPoint="0.5,1">
            <GradientStop Color="#FF3C3C3C" Offset="0"/>
            <GradientStop Color="#FF1E1E1E" Offset="1"/>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="PanelBackground" StartPoint="0.5,0" EndPoint="0.5,1">
            <GradientStop Color="#FF2A2A2A" Offset="0.0"/>
            <GradientStop Color="#FF1E1E1E" Offset="1.0"/>
        </LinearGradientBrush>

        <!-- ИСПРАВЛЕНИЕ: Разделил ресурс на Color и SolidColorBrush для избежания ошибки парсера XAML -->
        <Color x:Key="AccentColorValue">#FF007AFF</Color>
        <SolidColorBrush x:Key="AccentColor" Color="{StaticResource AccentColorValue}"/>
        <!-- Яркий акцент для контраста с серым -->

        <SolidColorBrush x:Key="AccentGrayColor" Color="#FF555555"/>
        <SolidColorBrush x:Key="AccentGrayHoverColor" Color="#FF6B6B6B"/>
        <SolidColorBrush x:Key="AccentGrayPressedColor" Color="#FF4A4A4A"/>

        <SolidColorBrush x:Key="TextColor" Color="#FFFFFFFF"/>
        <SolidColorBrush x:Key="SubtleTextColor" Color="#FF8A9BAB"/>
        <SolidColorBrush x:Key="ControlBackgroundColor" Color="#FF333333"/>

        <!-- НОВОЕ: Анимации для кнопок и полей ввода -->
        <Storyboard x:Key="ButtonHoverOn">
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" To="1.03" Duration="0:0:0.1"/>
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" To="1.03" Duration="0:0:0.1"/>
        </Storyboard>
        <Storyboard x:Key="ButtonHoverOff">
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" To="1" Duration="0:0:0.1"/>
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" To="1" Duration="0:0:0.1"/>
        </Storyboard>
        <Storyboard x:Key="ControlFocusOn">
            <!-- ИСПРАВЛЕНИЕ ОШИБКИ: Явно указываем, что анимировать нужно элемент с именем "border" внутри шаблона -->
            <DoubleAnimation Storyboard.TargetName="border" Storyboard.TargetProperty="(UIElement.Effect).(DropShadowEffect.Opacity)" To="0.4" Duration="0:0:0.2"/>
        </Storyboard>
        <Storyboard x:Key="ControlFocusOff">
            <!-- ИСПРАВЛЕНИЕ ОШИБКИ: Явно указываем, что анимировать нужно элемент с именем "border" внутри шаблона -->
            <DoubleAnimation Storyboard.TargetName="border" Storyboard.TargetProperty="(UIElement.Effect).(DropShadowEffect.Opacity)" To="0" Duration="0:0:0.2"/>
        </Storyboard>


        <!-- Общий стиль для полей ввода -->
        <Style x:Key="ModernTextBoxBase" TargetType="Control">
            <Setter Property="Background" Value="{StaticResource ControlBackgroundColor}"/>
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Control">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="10" BorderThickness="1" BorderBrush="Transparent">
                            <!-- НОВОЕ: Эффект тени для анимации фокуса -->
                            <Border.Effect>
                                <!-- ИСПРАВЛЕНИЕ: Теперь используется ресурс типа Color, а не Brush -->
                                <DropShadowEffect x:Name="shadow" ShadowDepth="0" Color="{StaticResource AccentColorValue}" BlurRadius="10" Opacity="0"/>
                            </Border.Effect>
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource AccentColor}"/>
                                <!-- НОВОЕ: Запуск анимации при фокусе -->
                                <Trigger.EnterActions>
                                    <BeginStoryboard Storyboard="{StaticResource ControlFocusOn}"/>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard Storyboard="{StaticResource ControlFocusOff}"/>
                                </Trigger.ExitActions>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernTextBox" TargetType="TextBox" BasedOn="{StaticResource ModernTextBoxBase}">
            <Setter Property="CaretBrush" Value="{StaticResource AccentColor}"/>
        </Style>
        <Style x:Key="ModernPasswordBox" TargetType="PasswordBox" BasedOn="{StaticResource ModernTextBoxBase}">
            <Setter Property="CaretBrush" Value="{StaticResource AccentColor}"/>
        </Style>

        <!-- Стиль для основной (серой) кнопки -->
        <Style x:Key="AccentButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentGrayColor}"/>
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="10">
                            <!-- НОВОЕ: Трансформация для анимации увеличения -->
                            <Border.RenderTransform>
                                <ScaleTransform ScaleX="1" ScaleY="1" CenterX="125" CenterY="22.5"/>
                            </Border.RenderTransform>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource AccentGrayHoverColor}"/>
                                <!-- НОВОЕ: Анимации при наведении мыши -->
                                <Trigger.EnterActions>
                                    <BeginStoryboard Storyboard="{StaticResource ButtonHoverOn}"/>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard Storyboard="{StaticResource ButtonHoverOff}"/>
                                </Trigger.ExitActions>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource AccentGrayPressedColor}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="TextButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource SubtleTextColor}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <TextBlock x:Name="textBlock" Text="{TemplateBinding Content}" Foreground="{TemplateBinding Foreground}">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="TextDecorations" Value="Underline"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Background="{StaticResource PageBackground}">
        <!-- НОВОЕ: Триггер для анимации при загрузке страницы -->
        <Grid.Triggers>
            <EventTrigger RoutedEvent="Loaded">
                <BeginStoryboard>
                    <Storyboard>
                        <DoubleAnimation Storyboard.TargetName="LoginPanel" Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.5" />
                        <ThicknessAnimation Storyboard.TargetName="LoginPanel" Storyboard.TargetProperty="(FrameworkElement.Margin)" From="0,-50,0,50" To="0" Duration="0:0:0.5">
                            <ThicknessAnimation.EasingFunction>
                                <CubicEase EasingMode="EaseOut"/>
                            </ThicknessAnimation.EasingFunction>
                        </ThicknessAnimation>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </Grid.Triggers>

        <Border x:Name="LoginPanel" 
                CornerRadius="20"
                Width="400"
                Background="{StaticResource PanelBackground}"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Opacity="0"
                d:Opacity="1">
            <!-- ИСПРАВЛЕНИЕ: Добавлена видимость в дизайнере -->
            <Border.Effect>
                <DropShadowEffect Color="Black" ShadowDepth="0" BlurRadius="30" Opacity="0.6"/>
            </Border.Effect>

            <StackPanel Margin="40">
                <TextBlock Text="Вход в мессенджер" FontSize="26" FontWeight="Bold" Foreground="{StaticResource TextColor}" HorizontalAlignment="Center" Margin="0,0,0,30"/>

                <Grid Margin="0,0,0,15">
                    <TextBox x:Name="LoginTextBox" Style="{StaticResource ModernTextBox}" TextChanged="LoginTextBox_TextChanged" GotFocus="LoginTextBox_GotFocus" LostFocus="LoginTextBox_LostFocus"/>
                    <TextBlock x:Name="LoginPlaceholder" Text="Логин" Foreground="{StaticResource SubtleTextColor}" FontSize="16" Padding="12" IsHitTestVisible="False" VerticalAlignment="Center"/>
                </Grid>

                <Grid Margin="0,0,0,30">
                    <PasswordBox x:Name="PasswordBox" Style="{StaticResource ModernPasswordBox}" PasswordChanged="PasswordBox_PasswordChanged" GotFocus="PasswordBox_GotFocus" LostFocus="PasswordBox_LostFocus"/>
                    <TextBlock x:Name="PasswordPlaceholder" Text="Пароль" Foreground="{StaticResource SubtleTextColor}" FontSize="16" Padding="12" IsHitTestVisible="False" VerticalAlignment="Center"/>
                </Grid>

                <Button Content="Войти" Style="{StaticResource AccentButton}" Margin="0,0,0,20" Click="LoginButton_Click"/>
                <Button Content="Нет аккаунта? Зарегистрироваться" Style="{StaticResource TextButton}" HorizontalAlignment="Center" Click="RegisterButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>

