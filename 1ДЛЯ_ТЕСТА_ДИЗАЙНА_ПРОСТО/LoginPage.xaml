<Page x:Class="_1ДЛЯ_ТЕСТА_ДИЗАЙНА_ПРОСТО.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Width="1000" Height="600"
      Title="LoginPage">

    <Grid>
        <!-- Овальная плашка с текстом "Спасибо за скачивание нашего Мессенджера" -->
        <Border CornerRadius="20"
                Background="#FF444444"
                Padding="15,8"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Margin="0,55,0,0"
                Opacity="0.9">
            <Border.Effect>
                <DropShadowEffect Color="Black" ShadowDepth="5" BlurRadius="10" Opacity="0.5"/>
            </Border.Effect>
            <TextBlock Text="Спасибо за скачивание нашего Мессенджера"
                       Foreground="White"
                       FontSize="16"
                       FontWeight="SemiBold"
                       FontFamily="Segoe UI"
                       TextAlignment="Center"/>
        </Border>

        <!-- Скруглённая панель для формы входа -->
        <Border CornerRadius="30"
                Width="450" Height="406"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Opacity="0.98">
            <Border.Background>
                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                    <GradientStop Color="#FF2A2A2A" Offset="0.0"/>
                    <GradientStop Color="#FF1E1E1E" Offset="1.0"/>
                </LinearGradientBrush>
            </Border.Background>
            <Border.Effect>
                <DropShadowEffect Color="Black" ShadowDepth="10" BlurRadius="20" Opacity="0.6"/>
            </Border.Effect>

            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="30">
                <!-- Заголовок «Вход» -->
                <TextBlock Text="Вход"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,30"
                           FontFamily="Segoe UI"/>

                <!-- Поле «Логин» с placeholder и анимацией -->
                <Border CornerRadius="10" Background="#FF333333" Padding="10" Margin="0,0,0,15">
                    <Grid>
                        <TextBox x:Name="LoginTextBox"
                                 Width="300" Height="40"
                                 Background="Transparent"
                                 Foreground="White"
                                 CaretBrush="White"
                                 Padding="5"
                                 FontSize="14"
                                 BorderThickness="0"
                                 VerticalContentAlignment="Center"
                                 FontFamily="Segoe UI">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="TextBox">
                                                <Border Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}">
                                                    <ScrollViewer x:Name="PART_ContentHost"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                        <!-- Placeholder для логина с анимацией -->
                        <TextBlock x:Name="LoginPlaceholder"
                                   Text="Логин"
                                   Foreground="Gray"
                                   FontSize="14"
                                   FontFamily="Segoe UI"
                                   VerticalAlignment="Center"
                                   Margin="10,0,0,0"
                                   IsHitTestVisible="False">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Setter Property="Opacity" Value="1"/>
                                    <Style.Triggers>
                                        <!-- Показываем placeholder, если поле пустое и не в фокусе -->
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding Text, ElementName=LoginTextBox}" Value=""/>
                                                <Condition Binding="{Binding IsKeyboardFocused, ElementName=LoginTextBox}" Value="False"/>
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Visibility" Value="Visible"/>
                                            <MultiDataTrigger.EnterActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                                         From="0" To="1" Duration="0:0:0.3"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </MultiDataTrigger.EnterActions>
                                        </MultiDataTrigger>
                                        <!-- Скрываем placeholder, если поле не пустое или в фокусе -->
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding Text, ElementName=LoginTextBox}" Value=""/>
                                                <Condition Binding="{Binding IsKeyboardFocused, ElementName=LoginTextBox}" Value="True"/>
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <MultiDataTrigger.ExitActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                                         From="1" To="0" Duration="0:0:0.3"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </MultiDataTrigger.ExitActions>
                                        </MultiDataTrigger>
                                        <DataTrigger Binding="{Binding Text, ElementName=LoginTextBox}" Value="">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Text, ElementName=LoginTextBox}" Value="{x:Null}">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>
                </Border>

                <!-- Поле «Пароль» с placeholder и анимацией -->
                <Border CornerRadius="10" Background="#FF333333" Padding="10" Margin="0,0,0,25">
                    <Grid>
                        <PasswordBox x:Name="PasswordBox"
                                     Width="300" Height="40"
                                     Background="Transparent"
                                     Foreground="White"
                                     CaretBrush="White"
                                     Padding="5"
                                     FontSize="14"
                                     BorderThickness="0"
                                     VerticalContentAlignment="Center"
                                     FontFamily="Segoe UI"
                                     PasswordChar="•">
                            <PasswordBox.Style>
                                <Style TargetType="PasswordBox">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="PasswordBox">
                                                <Border Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}">
                                                    <ScrollViewer x:Name="PART_ContentHost"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </PasswordBox.Style>
                        </PasswordBox>
                        <!-- Placeholder для пароля с анимацией -->
                        <TextBlock x:Name="PasswordPlaceholder"
                                   Text="Пароль"
                                   Foreground="Gray"
                                   FontSize="14"
                                   FontFamily="Segoe UI"
                                   VerticalAlignment="Center"
                                   Margin="10,0,0,0"
                                   IsHitTestVisible="False">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Setter Property="Opacity" Value="1"/>
                                    <Style.Triggers>
                                        <!-- Показываем placeholder, если поле пустое и не в фокусе -->
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding Password, ElementName=PasswordBox}" Value=""/>
                                                <Condition Binding="{Binding IsKeyboardFocused, ElementName=PasswordBox}" Value="False"/>
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Visibility" Value="Visible"/>
                                            <MultiDataTrigger.EnterActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                                         From="0" To="1" Duration="0:0:0.3"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </MultiDataTrigger.EnterActions>
                                        </MultiDataTrigger>
                                        <!-- Скрываем placeholder, если поле не пустое или в фокусе -->
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding Password, ElementName=PasswordBox}" Value=""/>
                                                <Condition Binding="{Binding IsKeyboardFocused, ElementName=PasswordBox}" Value="True"/>
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <MultiDataTrigger.ExitActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                                         From="1" To="0" Duration="0:0:0.3"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </MultiDataTrigger.ExitActions>
                                        </MultiDataTrigger>
                                        <DataTrigger Binding="{Binding Password, ElementName=PasswordBox}" Value="">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Password, ElementName=PasswordBox}" Value="{x:Null}">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>
                </Border>

                <!-- Кнопка «Войти» -->
                <Button Content="Войти"
                        Width="250" Height="45"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Cursor="Hand"
                        BorderThickness="0"
                        Margin="0,0,0,15"
                        FontFamily="Segoe UI"
                        Click="LoginButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#FF555555"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="10"
                                                Padding="10">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#FF666666"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter Property="Background" Value="#FF777777"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Кнопка «Зарегистрироваться» -->
                <Button Content="Зарегистрироваться"
                        Width="250" Height="45"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Cursor="Hand"
                        BorderThickness="0"
                        FontFamily="Segoe UI"
                        Click="RegisterButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#FF444444"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="10"
                                                Padding="10">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#FF555555"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter Property="Background" Value="#FF666666"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Page>