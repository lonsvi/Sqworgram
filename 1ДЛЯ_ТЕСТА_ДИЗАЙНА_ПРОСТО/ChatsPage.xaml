<Page x:Class="_1ДЛЯ_ТЕСТА_ДИЗАЙНА_ПРОСТО.ChatsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:_1ДЛЯ_ТЕСТА_ДИЗАЙНА_ПРОСТО"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d"
      Title="ChatsPage" d:DesignHeight="600" d:DesignWidth="1000">

    <Page.Resources>
        <!-- Конвертеры -->
        <local:AvatarUrlToImageSourceConverter x:Key="AvatarUrlConverter"/>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <local:TextMessageToVisibilityConverter x:Key="TextMessageToVisibilityConverter"/>

        <!-- Цветовая палитра -->
        <Color x:Key="AccentColorValue">#FF007AFF</Color>
        <SolidColorBrush x:Key="AccentColor" Color="{StaticResource AccentColorValue}"/>
        <SolidColorBrush x:Key="PrimaryBackgroundColor" Color="#FF1E1E1E"/>
        <SolidColorBrush x:Key="SecondaryBackgroundColor" Color="#FF2B2B2B"/>
        <SolidColorBrush x:Key="ControlBackgroundColor" Color="#FF333333"/>
        <SolidColorBrush x:Key="HoverBackgroundColor" Color="#FF4A4A4A"/>
        <SolidColorBrush x:Key="PrimaryTextColor" Color="#FFFFFFFF"/>
        <SolidColorBrush x:Key="SecondaryTextColor" Color="#FF8A9BAB"/>
        <SolidColorBrush x:Key="AccentTextColor" Color="{StaticResource AccentColorValue}"/>
        <SolidColorBrush x:Key="TimestampTextColor" Color="#AEEEEE"/>

        <!-- Анимации -->
        <Storyboard x:Key="ChatPanelSlideIn">
            <ThicknessAnimation Storyboard.TargetProperty="Margin" From="10,10,-20,10" To="10" Duration="0:0:0.3">
                <ThicknessAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </ThicknessAnimation.EasingFunction>
            </ThicknessAnimation>
            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.2"/>
        </Storyboard>

        <!-- Стили контролов -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource ControlBackgroundColor}"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryTextColor}"/>
            <Setter Property="CaretBrush" Value="{StaticResource AccentColor}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="18" BorderThickness="1" BorderBrush="Transparent">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="IconButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource SecondaryTextColor}"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="20">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource HoverBackgroundColor}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource ControlBackgroundColor}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="TranslateButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource SecondaryTextColor}"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="5,2"/>
            <Setter Property="Margin" Value="0,2,0,2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="5" Padding="{TemplateBinding Padding}">
                            <TextBlock Text="{TemplateBinding Content}" TextDecorations="Underline"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="{StaticResource AccentTextColor}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ChatListItemStyle" TargetType="ListBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="10" Padding="10" Margin="5,0">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource ControlBackgroundColor}"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource AccentColor}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="{StaticResource ControlBackgroundColor}"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryTextColor}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,5"/>
        </Style>

    </Page.Resources>

    <Grid Background="{StaticResource PrimaryBackgroundColor}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="320"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Левая панель -->
        <Border Grid.Column="0" Background="{StaticResource SecondaryBackgroundColor}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0" Margin="10">
                    <TextBox x:Name="SearchTextBox" Style="{StaticResource ModernTextBox}" Text="Поиск" Foreground="{StaticResource SecondaryTextColor}" 
                             GotFocus="SearchTextBox_GotFocus" LostFocus="SearchTextBox_LostFocus" TextChanged="SearchTextBox_TextChanged"/>
                </StackPanel>

                <ListBox x:Name="ChatListBox" Grid.Row="1" Background="Transparent" BorderThickness="0"
                         ItemContainerStyle="{StaticResource ChatListItemStyle}"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                         SelectionChanged="ChatListBox_SelectionChanged"
                         MouseRightButtonUp="ChatListBox_MouseRightButtonUp">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid Grid.Column="0" Width="45" Height="45">
                                    <Ellipse Fill="{StaticResource HoverBackgroundColor}"/>
                                    <Image Source="{Binding AvatarUrl, Converter={StaticResource AvatarUrlConverter}}" Stretch="UniformToFill">
                                        <Image.Clip>
                                            <EllipseGeometry RadiusX="22.5" RadiusY="22.5" Center="22.5,22.5"/>
                                        </Image.Clip>
                                    </Image>
                                    <Ellipse Width="12" Height="12" Fill="LimeGreen" HorizontalAlignment="Right" VerticalAlignment="Bottom" Stroke="{StaticResource SecondaryBackgroundColor}" StrokeThickness="2"
                                             Visibility="{Binding IsOnline, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                </Grid>
                                <StackPanel Grid.Column="1" Margin="10,0,0,0" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Login}" Foreground="{StaticResource PrimaryTextColor}" FontSize="15" FontWeight="SemiBold"/>
                                    <TextBlock FontSize="12" Foreground="{StaticResource SecondaryTextColor}">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value="Оффлайн"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsTyping}" Value="True">
                                                        <Setter Property="Text" Value="печатает..."/>
                                                        <Setter Property="Foreground" Value="{StaticResource AccentTextColor}"/>
                                                        <Setter Property="FontStyle" Value="Italic"/>
                                                    </DataTrigger>
                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Binding="{Binding IsTyping}" Value="False"/>
                                                            <Condition Binding="{Binding IsOnline}" Value="True"/>
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter Property="Text" Value="В сети"/>
                                                    </MultiDataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="10">
                    <Button x:Name="SettingsButton" Style="{StaticResource IconButton}" Click="SettingsButton_Click">
                        <Path Data="M19.14,12.94c0.04-0.3,0.06-0.61,0.06-0.94c0-0.32-0.02-0.64-0.07-0.94l2.03-1.58c0.18-0.14,0.23-0.41,0.12-0.61 l-1.92-3.32c-0.12-0.22-0.37-0.29-0.59-0.22l-2.39,0.96c-0.5-0.38-1.03-0.7-1.62-0.94L14.4,2.23C14.38,2,14.17,1.84,13.92,1.84h-3.84 c-0.25,0-0.46,0.16-0.49,0.39l-0.34,2.55c-0.59,0.24-1.13,0.57-1.62,0.94l-2.39-0.96c-0.22-0.08-0.47,0-0.59,0.22L2.74,8.87 C2.62,9.08,2.66,9.34,2.86,9.48l2.03,1.58C4.84,11.36,4.82,11.68,4.82,12s0.02,0.64,0.07,0.94l-2.03,1.58 c-0.18,0.14-0.23,0.41-0.12,0.61l1.92,3.32c0.12,0.22,0.37,0.29,0.59,0.22l2.39-0.96c0.5,0.38,1.03,0.7,1.62,0.94l0.34,2.55 c0.02,0.24,0.23,0.39,0.49,0.39h3.84c0.25,0,0.46-0.16,0.49-0.39l0.34-2.55c0.59-0.24,1.13-0.57,1.62-0.94l2.39,0.96 c0.22,0.08,0.47,0,0.59-0.22l1.92-3.32c0.12-0.22,0.07-0.47-0.12-0.61L19.14,12.94z M12,15.6c-1.98,0-3.6-1.62-3.6-3.6 s1.62-3.6,3.6-3.6s3.6,1.62,3.6,3.6S13.98,15.6,12,15.6z" Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" Stretch="Uniform" Width="22"/>
                    </Button>
                    <Button x:Name="FavoriteButton" Style="{StaticResource IconButton}" Click="ToggleFavoriteMode_Click">
                        <Path Data="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z" Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" Stretch="Uniform" Width="22"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Правая панель (Чат) -->
        <Grid Grid.Column="1">
            <Border x:Name="ChatPlaceholder" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Выберите, кому хотели бы написать" Foreground="{StaticResource SecondaryTextColor}" FontSize="16"/>
            </Border>

            <Grid x:Name="ChatArea" Visibility="Collapsed">
                <Grid.Style>
                    <Style TargetType="Grid">
                        <Style.Triggers>
                            <Trigger Property="Visibility" Value="Visible">
                                <Trigger.EnterActions>
                                    <BeginStoryboard Storyboard="{StaticResource ChatPanelSlideIn}"/>
                                </Trigger.EnterActions>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Style>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Background="{StaticResource SecondaryBackgroundColor}" CornerRadius="10" Padding="15" Margin="10,10,10,0">
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" x:Name="ChatHeader" Foreground="{StaticResource PrimaryTextColor}" FontSize="18" FontWeight="SemiBold" VerticalAlignment="Center"/>
                            <ComboBox Grid.Column="1" x:Name="TranslationDirectionComboBox" Style="{StaticResource ModernComboBoxStyle}" Width="120">
                                <ComboBoxItem Content="EN → RU" IsSelected="True"/>
                                <ComboBoxItem Content="RU → EN"/>
                            </ComboBox>
                        </Grid>
                        <TextBlock x:Name="TypingIndicator" Foreground="{StaticResource AccentTextColor}" FontStyle="Italic" FontSize="12" Margin="0,5,0,0" Visibility="Collapsed"/>
                    </StackPanel>
                </Border>

                <ScrollViewer x:Name="ChatScrollViewer" Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,10,0,0">
                    <ItemsControl x:Name="MessagesPanel" Margin="10,0">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="{x:Type local:MessageViewModel}">
                                <Grid>
                                    <!-- ИЗМЕНЕНИЕ: Добавлена анимация появления для каждого сообщения -->
                                    <Grid.Triggers>
                                        <EventTrigger RoutedEvent="Loaded">
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <ThicknessAnimation Storyboard.TargetName="MessageBubble" Storyboard.TargetProperty="Margin" From="0,20,0,0" To="5" Duration="0:0:0.4">
                                                        <ThicknessAnimation.EasingFunction>
                                                            <CubicEase EasingMode="EaseOut"/>
                                                        </ThicknessAnimation.EasingFunction>
                                                    </ThicknessAnimation>
                                                    <DoubleAnimation Storyboard.TargetName="MessageBubble" Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.3"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>
                                    </Grid.Triggers>

                                    <Border x:Name="MessageBubble" Padding="12" MaxWidth="400" Opacity="0">
                                        <StackPanel>
                                            <Image Source="{Binding AttachmentUrl}" MaxWidth="250" MaxHeight="250" Margin="0,0,0,5" Cursor="Hand" MouseLeftButtonDown="Image_MouseLeftButtonDown">
                                                <Image.Style>
                                                    <Style TargetType="Image">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding AttachmentUrl}" Value="{x:Null}">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding AttachmentUrl}" Value="">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Image.Style>
                                            </Image>

                                            <TextBlock Text="{Binding MessageText}" TextWrapping="Wrap" FontSize="14" Visibility="{Binding MessageText, Converter={StaticResource TextMessageToVisibilityConverter}}"/>

                                            <Grid Margin="0,5,0,0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <Button Grid.Column="0" Content="Перевести" Style="{StaticResource TranslateButtonStyle}" HorizontalAlignment="Left"
                                                        Click="TranslateButton_Click" Tag="{Binding}"
                                                        Visibility="{Binding MessageText, Converter={StaticResource TextMessageToVisibilityConverter}}"/>
                                                <TextBlock x:Name="TimestampText" Grid.Column="1" Text="{Binding Timestamp, StringFormat='HH:mm'}" FontSize="10" HorizontalAlignment="Right"/>
                                            </Grid>
                                        </StackPanel>
                                    </Border>
                                </Grid>
                                <DataTemplate.Triggers>
                                    <DataTrigger Binding="{Binding IsSentByMe}" Value="False">
                                        <Setter TargetName="MessageBubble" Property="HorizontalAlignment" Value="Left"/>
                                        <Setter TargetName="MessageBubble" Property="Background" Value="{StaticResource SecondaryBackgroundColor}"/>
                                        <Setter TargetName="MessageBubble" Property="CornerRadius" Value="15,15,15,5"/>
                                        <Setter TargetName="MessageBubble" Property="TextBlock.Foreground" Value="{StaticResource PrimaryTextColor}"/>
                                        <Setter TargetName="TimestampText" Property="Foreground" Value="{StaticResource SecondaryTextColor}"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding IsSentByMe}" Value="True">
                                        <Setter TargetName="MessageBubble" Property="HorizontalAlignment" Value="Right"/>
                                        <Setter TargetName="MessageBubble" Property="Background" Value="{StaticResource AccentColor}"/>
                                        <Setter TargetName="MessageBubble" Property="CornerRadius" Value="15,15,5,15"/>
                                        <Setter TargetName="MessageBubble" Property="TextBlock.Foreground" Value="{StaticResource PrimaryTextColor}"/>
                                        <Setter TargetName="TimestampText" Property="Foreground" Value="{StaticResource TimestampTextColor}"/>
                                    </DataTrigger>
                                </DataTemplate.Triggers>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- Панель ввода сообщения -->
                <Border Grid.Row="2" Background="{StaticResource SecondaryBackgroundColor}" CornerRadius="22" Margin="10" Padding="5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Button x:Name="AttachFileButton" Grid.Column="0" Style="{StaticResource IconButton}" Click="AttachFileButton_Click">
                            <Path Data="M16.5 6v11.5c0 2.21-1.79 4-4 4s-4-1.79-4-4V5c0-1.38 1.12-2.5 2.5-2.5s2.5 1.12 2.5 2.5v10.5c0 .55-.45 1-1 1s-1-.45-1-1V6H10v9.5c0 1.38 1.12 2.5 2.5 2.5s2.5-1.12 2.5-2.5V5c0-2.21-1.79-4-4-4S7 2.79 7 5v12.5c0 3.04 2.46 5.5 5.5 5.5s5.5-2.46 5.5-5.5V6h-1.5z" Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" Stretch="Uniform" Width="20"/>
                        </Button>
                        <TextBox x:Name="MessageTextBox" Grid.Column="1" Style="{StaticResource ModernTextBox}" Margin="5,0"
                                 TextChanged="MessageTextBox_TextChanged" KeyDown="MessageTextBox_KeyDown"/>
                        <Button x:Name="SendMessageButton" Grid.Column="2" Style="{StaticResource IconButton}" Click="SendMessage_Click">
                            <Path Data="M2.01 21L23 12 2.01 3 2 10l15 2-15 2z" Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" Stretch="Uniform" Width="20"/>
                        </Button>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Page>

